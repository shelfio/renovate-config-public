{
  "extends": [
    "config:base",
    ":disableDependencyDashboard"
  ],
  "schedule": [
    "before 6am on Thursday",
    "before 10am on Sunday"
  ],
  "timezone": "Europe/Kiev",
  "ignoreDeps": [
    "@types/node"
  ],
  "prCreation": "not-pending",
  "automergeType": "pr",
  "labels": [
    "dependencies"
  ],
  "updateNotScheduled": false,
  "packageRules": [
    {
      "groupName": "Babel",
      "automerge": true,
      "major": {
        "automerge": false
      },
      "matchPackageNames": [
        "@babel/cli",
        "@babel/core",
        "@babel/node"
      ]
    },
    {
      "groupName": "Code Style Deps",
      "automerge": true,
      "major": {
        "automerge": false
      },
      "matchPackagePatterns": [
        "^eslint"
      ],
      "matchPackageNames": [
        "lint-staged",
        "prettier",
        "eslint"
      ]
    },
    {
      "groupName": "jest",
      "automerge": true,
      "major": {
        "automerge": false
      },
      "matchPackageNames": [
        "@types/jest",
        "babel-jest",
        "jest"
      ]
    },
    {
      "groupName": "AWS CDK",
      "matchPackagePatterns": [
        "^@aws-cdk/"
      ],
      "matchPackageNames": [
        "aws-cdk"
      ]
    },
    {
      "groupName": "Lodash",
      "automerge": true,
      "major": {
        "automerge": false
      },
      "matchPackageNames": [
        "@types/lodash",
        "@types/lodash-es",
        "lodash",
        "lodash-es"
      ]
    },
    {
      "groupName": "size-limit",
      "automerge": true,
      "major": {
        "automerge": false
      },
      "matchPackagePatterns": [
        "^@size-limit/"
      ],
      "matchPackageNames": [
        "size-limit"
      ]
    },
    {
      "groupName": "Typings",
      "automerge": true,
      "major": {
        "automerge": false
      },
      "matchPackagePatterns": [
        "^@types/"
      ],
      "excludePackageNames": [
        "@types/lodash",
        "@types/jest"
      ]
    },
    {
      "groupName": "Typescript",
      "automerge": true,
      "major": {
        "automerge": false
      },
      "matchPackagePatterns": [
        "typescript"
      ]
    }
  ]
}
